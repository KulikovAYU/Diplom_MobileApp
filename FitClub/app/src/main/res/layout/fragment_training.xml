<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_mainContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/materialize_screen_edge"
        android:layout_marginBottom="@dimen/materialize_screen_edge"
        >

        <LinearLayout
            android:id="@+id/item_difficultId"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/design_dark_default_color_primary_dark"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/item_groupTimeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/materialize_screen_edge"

            android:layout_toRightOf="@+id/item_difficultId"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_timeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:30"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size_big" />

            <LinearLayout
                android:id="@+id/item_mustPayId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_timeId"
                android:layout_marginBottom="@dimen/materialize_screen_edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_money_gray_24dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_phone_gray_24dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_isPopularId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_timeId"
                android:layout_marginBottom="@dimen/materialize_screen_edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_thumb_up_gray_24dp" />

                         </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_trainingInfoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_mainContainerId"
            android:layout_marginStart="@dimen/materialize_screen_edge"
            android:layout_toRightOf="@+id/item_newTrainingId"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_trainingAndStatId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_isReplacedId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@drawable/ic_attention" />

                <TextView
                    android:id="@+id/item_trainingNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_isReplacedId"
                    android:text="Hatha Yoga"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/text_size_big" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_gymId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Большой зал"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_gymId"
                    android:text=". "
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_levelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Низкая интенсивность"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_levelId"
                    android:text=". "
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_CoachNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Имя инструктора"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_newTrainingId"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/item_mainContainerId"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/md_yellow_700"

                android:text="Новое "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="занятие"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/md_yellow_700"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
